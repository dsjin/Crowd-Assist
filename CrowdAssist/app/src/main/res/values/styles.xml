<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomFontTextViewStyle</item>
        <item name="editTextStyle">@style/CustomFontTextStyle</item>
    </style>
    <style name="AppTheme.noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#DB4537</item>
        <item name="colorPrimaryDark">#BA3322</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomFontTextViewStyle</item>
        <item name="editTextStyle">@style/CustomFontTextStyle</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">#DB4537</item>
        <item name="colorPrimaryDark">#BA3322</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/CustomFontTextViewStyle</item>
        <item name="editTextStyle">@style/CustomFontTextStyle</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CustomFontTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/trirong</item>
    </style>
    <style name="CustomFontTextStyle" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/trirong</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">#DB4537</item>
    </style>
    <style name="NavDrawerTextStyle">
        <item name="android:fontFamily">@font/trirong_w_light</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="RatingBarRed" parent="Widget.AppCompat.RatingBar">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
    <style name="RatingBarRedMaterialSmall" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>
